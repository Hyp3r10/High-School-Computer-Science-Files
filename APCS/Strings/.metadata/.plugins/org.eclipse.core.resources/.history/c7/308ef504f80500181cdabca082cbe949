public class Stringercise {
	public static void main(String[] args) {
		Stringercise.getName();
		
	}
	private static void getName() {
		String name = "Matthew";
		System.out.println("1. " + name);
		
		System.out.print("\nEnter in a Middle Name :: ");
		name += " Terry";
		System.out.println("\n2. " + name);
		
		System.out.print("\nEnter in a Last Name :: ");
		name = name.concat(" Sheldon");
		System.out.println("\n3. " + name);
		
		name = name.toLowerCase();
		System.out.println("\n4. " + name);
		
		name = name.toUpperCase();
		System.out.println("\n5. " + name);
	}
}
