class Solution {
    public int minDays(int[] bloomDay, int m, int k) {
        if(((long)m)*k > bloomDay.length)
            return -1;
        int l = 0;
        int r = (int)Math.pow(10, 9);
        int mid = (l+r)/2;
        int count = 0;
        int bouq = 0;
        while(l <= r)
        {
            count = 0;
            bouq = 0;
            mid = (l+r)/2;
            boolean check = false;
            for(int num : bloomDay)
            {
                if(num <= mid)
                {
                    count++;
                    if(count == k)
                    {
                        count = 0;
                        bouq++;
                    }
                }else
                {
                    count = 0;
                }
                if(bouq == m)
                {
                    check = true;
                    break;
                }
            }
            if(check)
            {
                r = mid-1;
            }else
                l = mid+1;
        }
        return l;
    }
}