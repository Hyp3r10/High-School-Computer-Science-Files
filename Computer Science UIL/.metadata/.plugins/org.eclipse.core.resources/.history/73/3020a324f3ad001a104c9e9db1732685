import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;

class Solution {
	public static void main(String[] args) {
		System.out.println(minDays(new int[] {1,10,3,10,2}, 3, 1));
	}
	public static int minDays(int[] bloomDay, int m, int k) {
		if((m * k) > bloomDay.length) {
			return -1;
		}
		else if(m == 1) {
			Arrays.sort(bloomDay);
			return bloomDay[0];
		}
		/*else {
			ArrayList<Flower> flowers = new ArrayList<Flower>();
			for(int days : bloomDay) {
				flowers.add(new Flower(days, k));
			}
			boolean allBouquetsMade = false;
			int numMade = 0;
			int time = 0;
			while(!allBouquetsMade) {
				if(numMade >= m) {
					allBouquetsMade = true;
				}
				else {
					flowers = increaseDay(flowers);
					numMade = getNumBouquets(flowers, k);
					time++;
					System.out.println(numMade + " " + time);
				}
			}
			return time;
		}*/
		else {
			ArrayList<Temp> list = new ArrayList<Temp>();
			for(int i = 0; i < bloomDay.length-k+1; i++) {
				int sum = 0;
				for(int j = 0; j < k; j++) {
					sum+= bloomDay[i+j];
				}
				list.add(new Temp((int) Math.ceil(((double) sum / k))));
			}
			Collections.sort(list);
			System.out.println(list);
			return list.get(m-1).average;
		}
		
	}
}
class Temp implements Comparable<Temp> {
	public int average;
	public Temp(int num) {
		this.average = num;
	}
	public int compareTo(Temp other) {
		return Integer.compare(this.average, other.average);
	}
	public String toString() {
		return "" + this.average;
	}
}
