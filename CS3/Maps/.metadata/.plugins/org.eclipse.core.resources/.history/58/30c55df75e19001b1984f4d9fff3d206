import java.util.Map;
import java.util.Scanner;
import java.util.TreeMap;

public class Acronyms {
	private Map<String,String> acronymTable;
	private String sent;
	
	public Acronyms() {
		this.acronymTable = new TreeMap<String, String>();
	}

	public void putEntry(String entry) {
		String[] parts = entry.split(" - ");
		acronymTable.put(parts[0], parts[1]);
	}
	/**
	 * Change the 
	 * @param sent
	 * @return
	 */
	public String convert(String sent) {
		Scanner chop = new Scanner(sent);
		String output ="";
		while(chop.hasNext()) {
			String temp = chop.next();
			if(acronymTable.containsKey(temp.replaceAll("[.,?!]", ""))) {
				output += acronymTable.get(temp.replaceAll("[.,?!]", "")) + temp.charAt(temp.length()-1);
			}
			else {
				output += temp;
			}
			output += " ";
		}
		return output;
	}

	public String toString()
	{
		String output = "==== MAP CONTENTS ====\n\n";
		output += this.acronymTable.keySet().toString().replaceAll(",", "\n");
		output += "\n\n==== READ LINES ====\n\n";
		output += this.convert(this.sent);
		return output;	
	}
}